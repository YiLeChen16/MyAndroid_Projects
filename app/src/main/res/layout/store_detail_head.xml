<?xml version="1.0" encoding="utf-8"?><!--店铺详情信息布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/pink">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:text="心悦蛋糕房"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_access_time_24"
            android:layout_below="@id/tv_store_name"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_time"
            android:layout_below="@id/tv_store_name"
            android:text="配送约2-3小时"
            android:layout_marginStart="5dp"
            android:layout_alignBottom="@id/iv_time"
            android:gravity="center"/>
        <TextView
            android:id="@+id/store_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告："
            android:layout_below="@id/iv_time"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_store_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单后约2-3小时完成配送，请耐心等待"
            android:layout_below="@id/iv_time"
            android:layout_toEndOf="@id/store_notice"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/iv_store_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cake_shop"
            android:scaleType="fitXY"
            android:layout_above="@id/store_notice"/>
    </RelativeLayout>


</LinearLayout>