<?xml version="1.0" encoding="utf-8"?>
<!--菜品详情对话框布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_food_img"
            android:layout_width="165dp"
            android:layout_height="120dp"
            android:src="@drawable/food1"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="招牌水果蛋糕"
            android:layout_below="@id/iv_food_img"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_food_taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配料：水果、奶油、面包"
            android:layout_below="@id/tv_food_name"
            android:padding="4dp" />
        <TextView
            android:id="@+id/tv_saleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_taste"
            android:text="月售40"
            android:layout_marginStart="5dp" />
        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@id/tv_saleCount"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="￥188"
            android:padding="5dp"/>
        <Button
            android:id="@+id/btn_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="❎"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_skip_selector"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



</LinearLayout>