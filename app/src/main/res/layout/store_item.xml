<?xml version="1.0" encoding="utf-8"?>
<!--店铺条目布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@color/light_gray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/cake_shop"
            android:scaleType="fitXY"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image"
            android:text="心悦蛋糕店"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_alignTop="@id/iv_image"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image"
            android:layout_below="@id/tv_name"
            android:text="月售996"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_start_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_count"
            android:layout_toEndOf="@id/iv_image"
            android:layout_marginStart="15dp"
            android:text="起送￥35"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送￥5"
            android:layout_toEndOf="@id/tv_start_price"
            android:layout_alignBottom="@id/tv_start_price"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_welfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image"
            android:layout_below="@id/tv_start_price"
            android:layout_marginStart="10dp"
            android:text=" 福利：下单即送香菜冰激凌一个"
            android:layout_marginTop="8dp"
            android:layout_alignBottom="@id/iv_image"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送约2-3小时"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_name"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"/>


    </RelativeLayout>

</LinearLayout>