<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ed_receive_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请填写收货地址"
            android:layout_marginTop="10dp" />
        <ListView
            android:id="@+id/lv_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计      "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_toStartOf="@id/tv_subtotal_price"/>
            <TextView
                android:id="@+id/tv_subtotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="￥234"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="配送费       "
                android:layout_toStartOf="@id/tv_delivery_fee"
                android:layout_alignBottom="@id/tv_delivery_fee"/>
            <TextView
                android:id="@+id/tv_delivery_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_subtotal_price"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="￥4"
                android:textColor="@color/red"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <Button
                android:id="@+id/btn_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_selector"
                android:text="去支付"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总价      "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toStartOf="@id/tv_total_price"
                android:layout_alignBottom="@id/tv_total_price"/>
            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_above="@id/btn_payment"
                android:text="￥238"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>